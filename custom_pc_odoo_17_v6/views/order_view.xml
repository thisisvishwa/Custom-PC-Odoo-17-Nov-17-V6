```xml
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Order Form View -->
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">order.form</field>
            <field name="model">custom_pc_odoo_17_v6.order</field>
            <field name="arch" type="xml">
                <form string="Order">
                    <sheet>
                        <group>
                            <field name="customer_id"/>
                            <field name="order_date"/>
                            <field name="status"/>
                        </group>
                        <notebook>
                            <page string="Order Lines">
                                <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="subtotal"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Shipping Details">
                                <group>
                                    <field name="shipping_address"/>
                                    <field name="shipping_method"/>
                                    <field name="shipping_cost"/>
                                </group>
                            </page>
                            <page string="Payment Details">
                                <group>
                                    <field name="payment_method"/>
                                    <field name="payment_status"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Order Tree View -->
        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">order.tree</field>
            <field name="model">custom_pc_odoo_17_v6.order</field>
            <field name="arch" type="xml">
                <tree string="Orders">
                    <field name="customer_id"/>
                    <field name="order_date"/>
                    <field name="status"/>
                    <field name="total_amount"/>
                </tree>
            </field>
        </record>

        <!-- Order Action -->
        <record id="action_orders" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom_pc_odoo_17_v6.order</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Order
                </p>
            </field>
        </record>

        <!-- Order Menu -->
        <menuitem id="menu_orders" name="Orders" parent="custom_pc_odoo_17_v6.menu_custom_pc" sequence="10" action="action_orders"/>
    </data>
</odoo>
